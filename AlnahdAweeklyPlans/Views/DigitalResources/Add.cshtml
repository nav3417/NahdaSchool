@model  Services.Model.DigitalResourceMasterModel
@{
    List<SelectListItem> list = ViewBag.list;
}
<link href="https://cdn.jsdelivr.net/npm/chosen-js@1.8.7/chosen.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery-3.0.0.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chosen-js@1.8.7/chosen.jquery.js"></script>
<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Add", "NoticeBoard", FormMethod.Post, new { id = "prodForm", enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(x => x.Id)
                    <div class="form-group">
                        <label for="Name">Title:</label>
                        @Html.TextBoxFor(x => x.title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Short DEsscription:</label>
                        @Html.TextBoxFor(x => x.DescriptionShort, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Long Desscription:</label>
                        @Html.TextAreaFor(x => x.DescriptionLong, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Files:</label>
                        @Html.TextBox("file", null, new { type = "file" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Date From:</label>
                        @Html.TextBoxFor(x => x.From, new { @class = "form-control noticeboarddate", id = "noticeboardfrom" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Date To:</label>
                        @Html.TextBoxFor(x => x.To, new { @class = "form-control noticeboarddate", id = "noticeboardto" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Group Name:</label>
                        @Html.DropDownListFor(x => x.Selecteditems, Model.LessonPlanClassModellist.Select(x => new SelectListItem { Text = x.Name, Value = x.Id.ToString() }), new { @class = "form-control chosen-select", @multiple = "multiple", id = "DDLServiceCate" })
                    </div>
                    <input type="submit" value="Save" class="btn btn-success" />
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".chosen-select").chosen();
    });
</script> 