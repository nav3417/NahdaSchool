@model  Services.Model.DigitalResourceMasterModel
@{
    List<SelectListItem> list = ViewBag.list;
}

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Add", "DigitalResources", FormMethod.Post, new { id = "prodForm", enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(x => x.Id)
                    <div class="form-group">
                        <label for="Name">Title:</label>
                        @Html.TextBoxFor(x => x.title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Short DEsscription:</label>
                        @Html.TextBoxFor(x => x.DescriptionShort, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Long Desscription:</label>
                        @Html.TextAreaFor(x => x.DescriptionLong, new { @class = "form-control ckeditor" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Files:</label>
                        @if (Model.Id != 0 && Model.DigitalResourceFiles.Count > 0)
                        {
                            <div class="row">
                                @foreach (var i in Model.DigitalResourceFiles)
                                {
                                    <div class="col-md-2"><a href="">@i.ShowFileName</a></div>
                                }
                            </div>
                        }
                        @Html.TextBox("file", null, new { type = "file", Multiple = "multiple" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Date From:</label>
                        @Html.TextBoxFor(x => x.Fromstring, new { @class = "form-control noticeboarddate", id = "noticeboardfrom" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Date To:</label>
                        @Html.TextBoxFor(x => x.Tostring, new { @class = "form-control noticeboarddate", id = "noticeboardto" })
                    </div>
                    <div class="form-group">
                        <label for="Name">Group Name:</label>
                        @Html.ListBoxFor(x => x.Selecteditems, Model.LessonPlanClassModellist.Select(x => new SelectListItem { Text = x.Name, Value = x.Id.ToString() }), new { @class = "form-control chosen-select", @multiple = "multiple", id = "DDLServiceCate" })
                    </div>
                    <input type="submit" value="Save" class="btn btn-success" />
                }
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.0.0.js"></script>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>